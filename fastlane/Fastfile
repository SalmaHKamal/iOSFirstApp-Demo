      devices: ["iPhone 6s"]
    )
  end
  
  desc "Test Coverage"
  lane :testCoverage do
    slather(
    input_format: "bah",
    scheme: "iOSFirstApp",
    proj: "iOSFirstApp.xcodeproj"
  )
    
