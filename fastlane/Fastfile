  lane :lint do
    swiftlint()
  end
  
  desc "Description of what the lane does"
  lane :custom_lane do
    build_app(scheme: "iOSFirstApp",
    export_method: "validation",
     export_options: {
      destination: "upload"
      # provisioningProfiles: {
      #   "com.salma.iOSFirstApp" => "com.salma.iOSFirstApp"
      # }
    })
    firebase_app_distribution(
        app: "1:1023208811872:android:84d94bee0643fce0ed8205",
